<Window x:Class="graTakCzyNie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:graTakCzyNie"
        mc:Ignorable="d"
        Title="graTakCzyNie - Menu główne" MinHeight="200" MinWidth="600" Height="200" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="1.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid VerticalAlignment="Center" Grid.Column="0">
            <TextBlock TextAlignment="Center" Margin="-5" Text="gra planszowa"></TextBlock>
            <TextBlock TextAlignment="Center" FontSize="45" FontWeight="Bold">
                <Run Foreground="SeaGreen">tak</Run><Run Foreground="LightSeaGreen">CZY</Run><Run Foreground="SeaGreen">nie</Run>
            </TextBlock>
        </Grid>
        <StackPanel VerticalAlignment="Center" Grid.Column="1">
            <Button x:Name="ButtonNewGame" Content="Nowa gra" Margin="60 10" Padding="20 5" FontSize="25" FontWeight="Bold" Foreground="#304f50" Background="CadetBlue" Click="ButtonNewGame_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
